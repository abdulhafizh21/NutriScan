<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/white"
    tools:context=".RegisterActivity">


    <TextView
        android:id="@+id/R_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Buat Akun"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_bold"
        android:textSize="30dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/R_txt2"
        android:layout_marginTop="25dp"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:text="Gabung dan mulai gunakan aplikasi sekarang!"
        android:gravity="center"
        android:layout_below="@id/R_txt1"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_medium"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/Ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/R_txt2"
        android:padding="30dp">
        <EditText
            android:id="@+id/edt_username"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_shape"
            android:fontFamily="@font/roboto"
            android:inputType="text"
            android:hint="Nama Lengkap"
            android:drawableStart="@drawable/user_icon"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            />
        <EditText
            android:id="@+id/edt_email_R"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_shape"
            android:fontFamily="@font/roboto"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/email"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            />
        <EditText
            android:id="@+id/edt_password_R"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_shape"
            android:fontFamily="@font/roboto"
            android:hint="Kata Sandi"
            android:inputType="textPassword"
            android:drawableStart="@drawable/icon_password"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            />
        <EditText
            android:id="@+id/edt_konfirmasi_password"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_shape"
            android:fontFamily="@font/roboto"
            android:inputType="textPassword"
            android:hint="Konfirmasi Kata Sandi"
            android:drawableStart="@drawable/icon_password"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/R_btn_daftar"
        android:layout_below="@id/Ly_1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:height="50dp"
        android:width="326dp"
        android:background="@drawable/button_daftar"
        android:text="Daftar"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/R_btn_daftar"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/R_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah Punya akun?"
            android:fontFamily="@font/roboto"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/R_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textColor="@color/hijaumuda"
            android:fontFamily="@font/roboto_bold"
            android:textSize="15sp"
            android:layout_marginTop="15dp"/>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>